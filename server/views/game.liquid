{% layout "server/layouts/base.liquid" %}

{% block head %}
  <title>Game</title>
{% endblock %}

{% block styles %}
  <link rel="stylesheet" href="/css/game.css">
{% endblock %}


{% block content %}

  <div class="game-container">
    <div class="game">
      <div>
        <a href="{{ previousPage }}">Go back</a>
        <small>Your category</small>
        <h1>Wolves</h1>

        <div>
          <svg>
            <line x1="0" y1="1" x2="100%" y2="1"/>
          </svg>
          <div class="alt-container">
            <p>Alt=</p>
            <p>”A wolf pack growling in the snow”</p>
          </div>
          <svg>
            <line x1="0" y1="1" x2="100%" y2="1"/>
          </svg>
        </div>

      </div>
      <section>
        <h2>Match the corresponding image!</h2>
        <ul>
          {% for image in images limit:4 %}
            <li>
              <button>
                <img src="{{ image.urls.regular }}" alt="{{ image.alt_description }}">
              </button>
            </li>
          {% endfor %}
        </ul>

        <footer>
          <h3>
            <span class="break">3</span>Streak</h3>
          <h3>
            <span class="break">5</span>Correct</h3>
          <h3>
            <span class="break">2</span>Wrong</h3>
        </footer>
      </section>
    </div>
  </div>

{% endblock %}}